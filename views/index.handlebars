<div class="uk-container uk-text-center">

    <h1>Burgertime</h1>

    <form id="burgerform">
        <textarea class="uk-textarea" type="text" id="burgerinput"></textarea>
        <button class="uk-button uk-button-default" id="submit" style="margin: 1em; border-radius: 1em;">Submit</button>
    </form>

    <hr class="uk-divider-icon">

    <section class="uk-section-default uk-grid uk-child-width-1-2 uk-text-center uk-flex-center" uk-grid>
        <div id="noteaten" class="uk-container">
            <h2 class="uk-heading-divider">Not Eaten</h2>
            <div>

                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block eaten=false}}
                    {{/unless}}
                {{/each}}

            </div>
        </div>

        <div id="eaten" class="uk-container">
            <h2 class="uk-heading-divider">Eaten</h2>
            <div>

                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block eaten=true}}
                    {{/if}}
                {{/each}}

            </div>
        </div>
    </section>

</div>